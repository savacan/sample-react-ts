{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,

        "module": "ESNEXT",
        "target": "ESNext",
        "jsx": "preserve",

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true, 

        "moduleResolution": "node",

        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}